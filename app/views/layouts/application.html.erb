<!DOCTYPE html>
<html>
<head>
  <title>ToDoApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
    <h1><%= "#{current_user.f_name} #{current_user.l_name}'s To Dos" %></h1>
<% else %>
    <h1>To Do Application</h1>
<% end %>


<%= yield %>

<%= debug(params) if Rails.env.development? %>
</body>
</html>

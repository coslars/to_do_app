<%# You could also specify the action, but by using @user you don't have to: form_for @user, url: { action: 'update' } do |f| %>

<%= form_for @user do |f| %>

    <%= render 'shared/messages', object: f.object %>

    <p>
        <%= f.label 'First Name' %><br>
        <%= f.text_field :f_name, { size: '75', maxlength: '75' } %>
    </p>

    <p>
        <%= f.label 'Last Name' %><br>
        <%= f.text_field :l_name, { size: '75', maxlength: '75' } %>
    </p>

    <p>
        <%= f.label 'Email' %><br>
        <%= f.text_field :email, { size: '100', maxlength: '100', autocomplete: 'off' } %>
    </p>

    <p>
        <%= f.label 'Password' %><br>
        <%= f.password_field :password, { size: '25', maxlength: '25', autocomplete: 'off' } %>
    </p>

    <p>
        <%= f.label 'Confirm Password' %><br>
        <%= f.password_field :password_confirmation, { size: '25', maxlength: '25', autocomplete: 'off' } %>
    </p>

    <p>
        <%= f.check_box :admin %>
        <%= f.label 'Is Admin' %><br>
    </p>

    <p>
        <%= f.submit %> <%= link_to("Delete", "/sessions/:id", method: "delete", id: @user) unless @user.id.nil? %> <%= link_to 'Cancel', users_path %>
    </p>
<% end %>
